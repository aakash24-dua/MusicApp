<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="AppThemeParent.Light" parent="Theme.AppCompat.NoActionBar" />


    <style name="AppTheme.Light" parent="AppThemeParent.Light">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorPrimarySecondary">@color/colorPrimaryLightSecondary</item>
        <item name="colorPrimarySecondary2">@color/colorPrimaryLightSecondary2</item>
        <item name="colorPrimaryOpacity">@color/colorPrimaryLightOpacity</item>
        <item name="colorError">@color/error</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="colorAccentOpacity">@color/colorAccentLightOpacity</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
        <item name="titleTextColor">@color/colorTitleTextLight</item>
        <item name="subTitleTextColor">@color/colorSubTitleTextLight</item>
        <item name="bodyTextColor">@color/colorBodyTextLight</item>
        <item name="btnTintColor">@color/colorTitleTextLight</item>
    </style>

    <style name="BottomSheetAlertTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="colorAccent">@color/purple_200</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="OverScrollColor">
        <item name="android:colorPrimary">@color/purple_200</item>
    </style>
</resources>